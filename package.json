{
  "name": "@balena/sbvr-types",
  "version": "3.4.4",
  "description": "SBVR type definitions.",
  "main": "out",
  "scripts": {
    "lint": "balena-lint -e js -e ts --typescript src test && npx tsc --noEmit --project tsconfig.js.json",
    "pretest": "npm run prepare",
    "test": "mocha",
    "posttest": "npm run lint",
    "prepublish": "require-npm4-to-publish",
    "prepare": "tsc",
    "prettify": "balena-lint -e js -e ts --typescript --fix src test"
  },
  "repository": "https://github.com/balena-io-modules/sbvr-types.git",
  "author": "",
  "license": "BSD",
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/sha.js": "^2.4.0"
  },
  "optionalDependencies": {
    "bcrypt": "^5.0.1",
    "bcryptjs": "^2.4.3",
    "sha.js": "^2.4.11"
  },
  "devDependencies": {
    "@balena/lint": "^5.4.1",
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/chai-datetime": "^0.0.37",
    "@types/lodash": "^4.14.172",
    "@types/mocha": "^9.0.0",
    "bluebird": "^3.7.2",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-datetime": "^1.8.0",
    "husky": "^4.3.8",
    "lint-staged": "^11.1.2",
    "lodash": "^4.17.21",
    "mocha": "^9.1.1",
    "require-npm4-to-publish": "^1.0.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "balena-lint --typescript --fix"
    ],
    "*.js": [
      "balena-lint --typescript --fix"
    ]
  },
  "mocha": {
    "reporter": "spec",
    "recursive": true,
    "require": "ts-node/register/transpile-only",
    "_": "test/**/*.js"
  }
}
