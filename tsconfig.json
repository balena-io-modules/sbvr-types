{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "strictNullChecks": true,
    "declaration": true,
    "pretty": true,
    "sourceMap": true,
    "typeRoots": [ "dist/index.d.ts" ],
    "types": ["node", "mocha", "chai", "chai-datetime"]
  },
  "include": [
    "./src/*.ts",
    "./src/*.d.ts",
    "./src/types/*.ts",
    "./test/*.ts"
  ]
}
