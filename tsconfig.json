{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2021",
		"strict": true,
		"noImplicitAny": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"declaration": true,
		"skipLibCheck": true,
		"rootDir": "src",
		"outDir": "out",
		"allowJs": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
