{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "strictNullChecks": true,
    "pretty": true,
    "sourceMap": true,
    "typeRoots": ["src/SBVRType.d.ts"],
    "types": ["node", "mocha", "chai", "chai-datetime"]
  },
  "include": [
    "./src/*.ts",
    "./src/*.d.ts",
    "./src/types/*.ts"
  ]
}
